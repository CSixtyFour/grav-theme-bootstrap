<!DOCTYPE html>
<html lang="en">
    <head>
        {% block head %}
        <meta charset="utf-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        {% include 'partials/metadata.html.twig' %}
        <title>{% if header.title %}{{ header.title }} | {% endif %}{{ site.title }}</title>

        <link rel="icon" type="image/png" href="{{ theme_url }}/images/favicon.png" />
        {% block stylesheets %}
            {% do assets.add('theme://css/bootstrap.min.css',102) %}
            {% do assets.add('theme://css/font-awesome.min.css',101) %}
            {% do assets.add('theme://css-compiled/theme.css',100) %}

            {{ assets.css() }}
        {% endblock %}

        {% block javascripts %}
            {% do assets.add('theme://js/jquery-2.1.1.min.js', 101) %}
            {% do assets.add('theme://js/modernizr.custom.71422.js', 100) %}
            {% do assets.add('theme://js/bootstrap.min.js') %}

            {% if browser.getBrowser == 'msie' and browser.getVersion >= 8 and browser.getVersion <= 9 %}
                {% do assets.add('https://oss.maxcdn.com/respond/1.4.2/respond.min.js') %}
                {% do assets.add('theme://js/html5shiv-printshiv.min.js') %}
            {% endif %}

            {{ assets.js() }}
        {% endblock %}

        {% endblock head%}
    </head>

      <body class="{{ page.header.body_classes }}">

        {# include the header + navigation #}
        {% include 'partials/header.html.twig' %}

        {% block content %}{% endblock %}

        <div class="footer">
            <div class="container">
                <p class="text-muted">Bootstrap Theme for <a href="http://getgrav.org">Grav</a></p>
            </div>
        </div>
        {% block bottom %}{% endblock %}
    </body>
</html>
